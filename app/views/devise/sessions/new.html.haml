%div.container.center-form
  %div.margin-auto
    %h2.pb-3 Please sign in
    = bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = f.email_field :email, autofocus: true, autocomplete: "email", floating: true
      = f.password_field :password, autocomplete: "current-password",floating: true
      %div.row.mb-4
        %div.col.d-flex
          - if devise_mapping.rememberable?
            = f.check_box :remember_me, switch: true
        %div.col
          - if devise_mapping.recoverable?
            = link_to "Forgot password?", new_password_path(resource_name)
      = f.submit "Sign in", class: "btn btn-primary btn-block fa-lg mb-3"

    %div.mt-3
      Don't have an account?
      = link_to "Register", new_registration_path(resource_name)
      
      
