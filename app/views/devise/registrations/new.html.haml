%div.container-fluid

  %h2 Sign up
  = bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .field
      = f.text_field :user_name, autofocus: true, autocomplete: "user-name"
    .field
      = f.text_field :first_name, autofocus: true, autocomplete: "first-name"
    .field
      = f.text_field :last_name, autofocus: true, autocomplete: "last-name"
    .field
      = f.password_field :password, autocomplete: "new-password", help: 'A good password should be at least six characters long'
    .field
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .actions
      = f.submit "Sign up", class: "btn btn-success"
  = render "devise/shared/links"

