= puts user.first_name
= puts article.user_id

= form_with model: article do |form|
  %div
    = form.label :title 
    %br/
    = form.text_field :title
    - article.errors.full_messages_for(:title).each do |message|
      %div= message

  %div
    = form.label :body
    %br/
    = form.text_area :body
    %br/
    - article.errors.full_messages_for(:body).each do |message| 
      %div= message 

  %div
    = form.label :status 
    %br/
    = form.select :status, ['public', 'private', 'archived'], selected: 'public'

  %div 
    = form.label :user_id, 'Author\'s first name'
    - selected_user = users.find{ |user| user['id'] == article.user_id}
    = form.select :user_id, options_for_select(users, selected: selected_user['first_name'])
  %div
    = form.submit
  