= form_with model: [ @article, @article.comments.build ] do |form|
  %p
    = form.label 'Commenter\'s user name'
    %br/
    = form.text_field :user_name
  %p
    = form.label :body
    %br/
    = form.text_area :body
  %p
    = form.label :status
    %br/
    = form.select :status, ['public', 'private', 'archived'], selected: 'public'
  %p
    = form.submit
  